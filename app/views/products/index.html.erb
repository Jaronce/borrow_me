<div class="container">
 <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1551218808-94e220e084d2?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=634&q=80)">
  <%= params[:skill].capitalize %>
</div>
  <div class="card-product">
    <h2><%= params[:skill].capitalize %></h2>
    <% @products.each do |product| %>
      <div class="card-product">
        <%= cl_image_tag(product.photo) %>
        <div class="card-product">
    <p class="name"><%= product.name  %>
    <% if (product.gender == "male") %>
      <i class="fas fa-mars"></i>
      <% else  %>
      <i class="fas fa-venus"></i>
    <% end %>
    </p>
    <p>City: <%= product.city  %></p>
    <p>Price: $<%= product.price  %></p>
          <%= link_to "", product_path(product), class: 'card-link' %>
        </div>
      </div>

      <% end %>
      </div>
  </div>

</div>




