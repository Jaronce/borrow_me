 <div class="card-top" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path @skill.photo %>)">
  <%= params[:skill].capitalize %>
 </div>


<div class="container">

<!--   <h2><%= params[:skill].capitalize %></h2>
 -->
  <div class="card-skills-grid">

    <% @products.each do |product| %>
      <div class="bm-card-product">
        <%= cl_image_tag(product.photo) %>
        <div class="bm-card-product-info">
          <div>
            <p class="name"><%= product.name  %>

              <% if (product.gender == "male") %>
              <i class="fas fa-mars"></i>
            <% else  %>
              <i class="fas fa-venus"></i>
            <% end %>

            </p>

            <p><%= product.city  %></p>
            <p>$<%= product.price  %> /hour</p>
          </div>

          <div>
            <%= link_to "Book now", product_path(product), class: "btn btn-primary btn-absolute" %>
          </div>
        </div>
      </div>
    <% end %>

  </div>


</div>






